<div class="container"><br>
	<%= image_tag(@article.image, class:'art-img') unless @article.image.blank? %><br><br>
	<h4 class="art-la">
<%= @article.title %><br>
</h4>
<p class="text-left">
<%= @article.text %><br>
</p>
<% show_article_category(@article) %>
<%= like_or_dislike_btn(@article) %>
<p> <%= @article.likes.count %> likes 
</p>
<p>Views: <%= @article.hits %></p>
<p>Written by:
<%= @article.author.name %>
</p>
<div class="text-center mt-4"><%= link_to 'Next Article >>', article_path(@article.id + 1) %></div>
  <div class="text-center mt-1"><%= link_to '< Back to previous page',  article_path(@article.id - 1) %></div>
</div><br>
<%= render 'homes/footer' %>
