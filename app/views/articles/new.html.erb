<%= form_with(model: @article, url: articles_path, method: :post) do |f| %>
  
    <div class="form-group"><br>
      <%= f.label :title, class: 'font-weight-bold d-flex f-0' %>
      <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control f-1' %>
    </div> 
 
    <div class="form-group"><br>
      <%= f.label :text, class: 'font-weight-bold d-flex f-0' %>
      <%= f.text_area :text, autocomplete: "text", class: 'form-control f-2' %>
    </div> 

    <%= f.fields_for :articles_categories do |ff| %>
       <div class="form-group f-3">
        <%= ff.label :category_id, class: 'font-weight-bold d-flex' %>
        <%= ff.collection_select(:category_id, Category.all, :id, :name) %><br><br>
      </div> 
    <% end %>

    <div class="form-group f-4"><br><br>
      <%= f.label :image, class: 'font-weight-bold d-flex m2' %>
      <%= f.file_field :image, class:'btn btn-secondary' %>
    </div>

    <div class="form-group"><br><br>
      <%= f.submit class:'btn btn-info b-1' %>
    </div><br>
    <% end %>
    <%= render 'homes/footer' %>



  



